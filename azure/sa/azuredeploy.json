{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters" : {
    "adminUser": {
      "type": "string",
      "defaultValue": "adminUser",
      "minLength": 2,
      "maxLength": 20,
      "metadata": {
        "description": "Username for the Virtual Machine."
      }
    },
    "adminPassword": {
      "type": "securestring",
      "minLength": 12,
      "maxLength": 123,
      "metadata": {
        "description": "Password for the Virtual Machine."
      }
    },
    "registrationCode": {
      "type": "securestring",
      "metadata": {
        "description": "PCoIP Standard Agent License Registration Code."
      }
    },       
    "_artifactsLocation": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/teradici/deployments/master/azure",
      "metadata": {
        "description": "The base location of resources, such as templates and DSC modules, that the template depends on"
      }
    }
  },
  "variables": {
    "deploymentApiVersion": "2016-09-01",
    "stdStorageName": "[replace(replace(tolower(concat('pcagent', uniquestring(resourceGroup().id))), '-',''),'.','')]",
    "vnetName": "pcoip-vnet",
    "subnetName": "stdAgentVM-subnet",
    "vmNamePrefix": "stdAgentVM",
    "nsgName": "pcoip-agent-nsg",
    "agentUrl": "https://teradeploy.blob.core.windows.net/binaries/PCoIP_agent_release_installer_2.8.0.5813_standard.exe"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "name": "deploySA",
      "apiVersion": "[variables('deploymentApiVersion')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('_artifactsLocation'), '/resources/', 'storage_account.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "storageAccountName": {
            "value": "[variables('stdStorageName')]"
          }
        }
      }
    },

    {
      "type": "Microsoft.Resources/deployments",
      "name": "depolyAgentNsg",
      "apiVersion": "[variables('deploymentApiVersion')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('_artifactsLocation'), '/resources/', 'pcoip_agent_nsg.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "nsgName": {
            "value": "[variables('nsgName')]"
          }
        }
      }
    },

    {
      "type": "Microsoft.Resources/deployments",
      "name": "depolyVNet",
      "apiVersion": "[variables('deploymentApiVersion')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('_artifactsLocation'), '/resources/', 'virtual_network.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vnetName": {
            "value": "[variables('vnetName')]"
          },
          "subnetName": {
            "value": "[variables('subnetName')]"
          }
        }
      }
    },

    {
      "type": "Microsoft.Resources/deployments",
      "name": "depolyNIC",
      "apiVersion": "[variables('deploymentApiVersion')]",
      "dependsOn": [
        "depolyAgentNsg",
        "depolyVNet"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('_artifactsLocation'), '/resources/', 'network_interface_pubIP.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vmName": {
            "value": "[variables('vmNamePrefix')]"
          },
          "nsgName": {
            "value": "[variables('nsgName')]"
          },
          "vnetName": {
            "value": "[variables('vnetName')]"
          },
          "subnetName": {
            "value": "[variables('subnetName')]"
          }
        }
      }
    },

    {
      "type": "Microsoft.Resources/deployments",
      "name": "deployVM",
      "apiVersion": "[variables('deploymentApiVersion')]",
      "dependsOn": [
        "deploySA",
        "depolyNIC"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('_artifactsLocation'), '/sa/', 'virtual_machine.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vmNamePrefix": {
            "value": "[variables('vmNamePrefix')]"
          },
          "adminUser": {
            "value": "[parameters('adminUser')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "nicName": {
            "value": "[reference('depolyNIC').outputs.nicName.value]"
          },
          "storageAccountName": {
            "value": "[variables('stdStorageName')]"
          }
        }
      }
    },

    {
      "type": "Microsoft.Resources/deployments",
      "name": "deployStdAgentDsc",
      "apiVersion": "[variables('deploymentApiVersion')]",
      "dependsOn": [
        "deployVM"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('_artifactsLocation'), '/sa/', 'vm_install_agent_dsc.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vmName": {
            "value": "[variables('vmNamePrefix')]"
          },
          "sourceUrl": {
            "value": "[variables('agentUrl')]"
          },
          "registrationCode": {
            "value": "[parameters('registrationCode')]"
          },
          "_artifactsLocation": {
            "value": "[parameters('_artifactsLocation')]"
          }
        }
      }
    }
  ],

  "outputs": {
    "vm_fqdn": {
      "type": "string",
      "value": "[reference('depolyNIC').outputs.vm_fqdn.value]"
    }
  }
}