{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters" : {
    "vmName": {
      "type": "string",
      "metadata": {
        "description": "The Computer Name that this extension will be deployed on."
      }
    },
    "agentSourceUrl": {
      "type": "string",
      "metadata": {
        "description": "PCoIP Graphics Agent URL"
      }
    },
    "nvidiaSourceUrl": {
      "type": "string",
      "metadata": {
        "description": "NVIDIA GRID driver URL"
      }
    },
    "registrationCode": {
      "type": "securestring",
      "metadata": {
        "description": "PCoIP Standard Agent License Registration Code."
      }
    },       
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "The location of DSC module, that the template depends on"
      }
    }      
  },  
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'), '/NvidiaPCoIPAgentDscExtension')]", 
      "apiVersion": "2017-03-30",
      "location": "[resourceGroup().location]",
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.9",
        "autoUpgradeMinorVersion": "true",
        "settings": {
      	  "configuration": {
		        "url": "[concat(parameters('_artifactsLocation'), '/resources/', 'Install-NvidiaAndPCoIPAgent.zip')]",
			    "script": "Install-NvidiaAndPCoIPAgent.ps1",
			    "function": "InstallPCoIPAgent"
		      },                
		      "configurationArguments": {
		        "agentSourceUrl": "[parameters('agentSourceUrl')]",
                "nvidiaSourceUrl": "[parameters('nvidiaSourceUrl')]"
		      },                              
              "privacy": {
                "DataCollection": "Disable"
              }
         },
        "protectedSettings": {
          "configurationArguments": {
            "registrationCodeCredential": {
              "userName": "dummyUser",
              "password": "[parameters('registrationCode')]"
            }
          }
        }                 
      }
    }      
  ]
}